<UserControl x:Class="Panoptes.View.Panels.LogPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:panels="clr-namespace:Panoptes.View.Panels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=panels:LogPanel,IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" GridLinesVisibility="None" ItemsSource="{Binding LogEntries}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding EntryType}" Width="100"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DateTime}" Width="140"/>
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" MaxWidth="400" >
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.TextWrapping" Value="WrapWithOverflow" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
